{
  "manifest_version": 3,
  "name": "Let's be delusional",
  "description": "Your virtual wingman",
  "version": "1.0.0",
  "icons": {
    "128": "icons/icon.png"
  },
  "permissions": [
    "storage",               
    "activeTab",              
    "scripting",     
    "identity",               
    "http://*/*",            
    "https://*/*"            
  ],
  "host_permissions": [
    "https://www.instagram.com/*" 
  ],
  "action": {
    "default_icon": {
      "32": "icons/icon.png"
    },
    "default_popup": "index.html",
    "default_title": "Open Popup"
  },
  "background": {
    "service_worker": "scripts/background.js"   
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/*"
      ],
      "js": ["scripts/contentScript.js"],
      "run_at": "document_idle"          
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "MacCtrl+Shift+O"
      },
      "description": "Toggle Popup"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["images/graphic.png", "icons/icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}